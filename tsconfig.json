{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2020",
        "baseUrl": "src",
        "sourceMap": true,
        "rootDir": "./src",
        "outDir": "./dist/",
        "esModuleInterop": true,
        "strict": true,
        "noImplicitAny": true,
        "removeComments": true,
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "ts-node": {
        "esm": true
    }
}